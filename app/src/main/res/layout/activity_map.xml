<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <fragment
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Map" />

    <LinearLayout
        android:id="@+id/filter_layer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/filter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_sort_by_size" />

        <LinearLayout
            android:id="@+id/filter_options_layer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Menu_Color"
            android:gravity="right"
            android:orientation="vertical">

            <Button
                android:id="@+id/filterPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price" />

            <Button
                android:id="@+id/filterVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle" />

            <Button
                android:id="@+id/filterServices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Services" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/settings_layer"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/settings_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_manage" />

        <LinearLayout
            android:id="@+id/services_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/Menu_Color"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/bird_layer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bird_text"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/bird_text"
                    android:textSize="20sp" />

                <ToggleButton
                    android:id="@+id/bird_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOff="Delete"
                    android:textOn="Add"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/lime_layer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lime_text"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/lime_text"
                    android:textSize="20sp" />

                <ToggleButton
                    android:id="@+id/lime_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOff="Delete"
                    android:textOn="Add"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/spin_layer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/spin_text"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/spin_text"
                    android:textSize="20sp" />

                <ToggleButton
                    android:id="@+id/spin_toggle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textOff="Delete"
                    android:textOn="Add"
                    android:textSize="14sp" />
            </LinearLayout>

            <Button
                android:id="@+id/logout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="log out" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>